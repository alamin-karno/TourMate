<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTripActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:onClick="backIV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/back"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/toolbarTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Trip"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resetimage"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fieldbg"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="5dp"
            android:hint="Trip name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/tripstartlocationnameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fieldbg"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="5dp"
            android:hint="Trip name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/triploactionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fieldbg"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="5dp"
            android:hint="Trip name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/tripDiscriptionET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fieldbg"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="5dp"
            android:hint="Trip name"
            android:inputType="text"
            android:padding="40dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>