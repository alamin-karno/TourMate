<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signinbg"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:id="@+id/loadingIV"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tour"
            android:layout_centerInParent="true"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading"
            android:layout_centerInParent="true"
            android:id="@+id/tourimage" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login in Tour Mate"
            android:textSize="30sp"
            android:textColor="#D81B60"
            android:textStyle="bold|italic"
            android:layout_below="@+id/tourimage"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loginLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="16sp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:background="@drawable/fieldbg"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="5dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:background="@drawable/fieldbg"
            android:padding="15dp"
            android:inputType="textPassword"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/loginBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:padding="15dp"
                android:background="@drawable/btnbg"
                android:textAllCaps="false"
                android:layout_margin="10dp"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:padding="7dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_pass"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="fogotpass" />

    </LinearLayout>
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textAlignment="center"
        android:onClick="onSignup"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>